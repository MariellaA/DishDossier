<RecipeItem>:
    #recipe_img: ImageLeftWidget
    size_hint_y: None
    height: dp(300)

    ImageLeftWidget:
        id: recipe_img

<Separator@Widget>
    id: separator
    size_hint_y: None
    height: 6
    thickness: 2
    canvas:
        Color:
            rgb: .24, .65, .94, 1
        Rectangle:
            #pos: 0, separator.center_y
            pos: self.pos[0], separator.center_y
            size: separator.width, self.thickness


<ScreenOne>:
    name: 'screen_one'
    #recipe_title: 'recipe_title'
    #recipe_servings: 'recipe_servings'
    #recipe_prep_time: 'recipe_prep_time'

    MDGridLayout:
        cols: 2
        #padding: 20

        MDScrollView:
            #md_bg_color: app.theme_cls.primary_color
            canvas.before:
                Color:
                    rgba: app.theme_cls.primary_color
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDBoxLayout:
                padding: 30
                orientation: 'vertical'

                MDLabel:
                    id: recipe_title
                    size_hint: 1, 0.30
                    font_size: "30dp"
                    text: 'Title'

                MDLabel:
                    size_hint: 1, 0.1
                    id: recipe_servings
                    text: 'Servings'

                MDGridLayout:
                    cols: 3
                    size_hint: 1, 0.1

                    MDLabel:
                        id: recipe_prep_time
                        text: 'Prep time'

                    MDLabel:
                        id: recipe_cook_time
                        text: 'Cook time'

                    MDLabel:
                        id: recipe_total_time
                        text: 'Total time'

                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, 1

                   # MDLabel:
                    #    id: recipe_descr
                     #   text: 'Description'


                    MDLabel:
                        id: recipe_instr
                        text: "Instructions"
                        size_hint_y: None
                        height: self.texture_size[1]
                        adaptive_height: True
                        theme_text_color: "Secondary"
                        padding: dp(10)


        ######## Recipe Ingredients #########
        MDBoxLayout:
            orientation: 'vertical'

            padding: 30
            spacing: 70

            MDSmartTile:
                id: recipe_full_image
                radius: 24
                box_radius: [0, 0, 24, 24]
                box_color: 0, 0, 0, .2
                anchor: 'top'
                pos_hint: {"center_x": .5, "top": 1}
                size_hint: None, None
                width: "400dp"
                height: "300dp"
                #scale: False
                #size: "400dp", "360dp"

                MDIconButton:
                    id: favs_button
                    icon: "heart-outline"
                    theme_icon_color: "Custom"
                    icon_color: 1, 0, 0, 1
                    pos_hint: {"center_y": .5}
                    on_release:
                        self.icon = "heart" if self.icon == "heart-outline" else "heart-outline"
                        root.ids.favs_label.text = "Remove from Favourites" if self.icon == "heart" else "Add To Favourites"
                        app.add_or_remove_from_favourites() # if self.icon == "heart" else app.remove_from_favourites()

                MDLabel:
                    id: favs_label
                    text: "Add to Favourites"
                    bold: True
                    color: 1, 1, 1, 1

            ScrollView:

                MDLabel:
                    id: recipe_ingr
                    text: "Ingredients"
                    size_hint: 0.5, .9
                    #size_hint_y: None
                    #height: self.texture_size[1]
                    #adaptive_height: True
                    theme_text_color: "Secondary"
                    padding: dp(10)
                    bold: True
                    color: 1, 1, 1, 1



