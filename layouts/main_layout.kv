                #on_text_validate: app.handle_ingredients_input()

    MDFlatButton:
        text: "Next Screen"
        #on_release: app.root.current = 'screen_two'


DishDossierController:
    orientation: 'horizontal'
    #spacing:10

    MDBoxLayout:
        size: root.width, root.height

        ######## SIDEBAR #########
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_x: None  # Fixed width
            width: 200
            #background_color: app.theme_cls.primary_color

            MDLabel:
                text: "Dish Dossier"
                text_color: (1, 0, 0, 1)
                padding: dp(10)
                size_hint_y: None
                #height: 200

            MDBoxLayout:
                orientation: "vertical"
                spacing: 10


                MDNavigationRail:
                    id: nav_rail
                    size_hint_x: None
                    width: 200

                    md_bg_color: app.theme_cls.primary_color  # Set background color
                    #specific_text_color: "#e7e4c0"

                    anchor: 'center'
                    ripple_color_item: [0.2, 0.2, 0.2, 0.1]
                    #on_action: app.on_navigation_item_select(args[0])

                    # All Recipes
                    MDNavigationRailItem:
                        text: 'All Recipes'
                        icon: 'rss'
                        font_name: "nasalization-rg.ttf"
                        on_release: app.on_recipe_list_select('all_recipes') #if self.state != 'Down'
                        #on_release: app,transition_to('reels')

                    # My Recipes
                    MDNavigationRailItem:
                        text: 'My Recipes'
                        icon: 'bookshelf'
                        font_name: "nasalization-rg.ttf"
                        on_release: app.on_recipe_list_select('my_recipes') #if self.state != 'Down'
                        #on_release: app.root.transition_to('my_recipes')

                    # Favourites
                    MDNavigationRailItem:
                        text: 'Favourites'
                        icon: 'notebook-heart-outline'
                        font_name: "nasalization-rg.ttf"
                        padding_top: dp(8)
                        on_release: app.on_recipe_list_select('favourites') #if self.state != 'Down'
                        #on_release: app.root.transition_to('favourites')


                    MDNavigationRailItem:
                        text: 'Meal Planner'
                        icon: 'calendar-multiselect'
                        font_name: "nasalization-rg.ttf"
                        on_press: app.on_recipe_list_select()  #app.transition_to('meal_planner')

                #MDSwitch:
                 #   id: switch_mode
                  #  pos_hint: {"center_x": .45}
                   # widget_style: "ios"
                    # on_release: app.switch_theme_style()


        ######### RECIPE LIST #########
        MDBoxLayout:
            #id: recipe_box
            orientation: 'vertical'
            size_hint: 0.4, 1

            spacing: 30
            padding: 30

            ###### SEARCH BAR ######
            MDGridLayout:
                cols: 2
                size_hint: 1, 0.1
                #valign: "middle"
                spacing: 50

                MDTextField:
                    id: search_text
                    hint_text: "Search"
                    mode: "round"
                    icon_right: "magnify"
                    icon_right_color_focus: "orange"
                    #helper_text: "Search"
                    on_text_validate: app.handle_search(self.text)

                    #max_text_length: 15
                    #size_hint: 1, 0.1
                    #size_hint_y: None
                    #padding: 0, 0, 0, 0
                    #pos_hint_y: {"center_y": .1}

                MDIconButton:
                    icon: "hamburger-plus"
                    #anchor: "center"
                    icon_size: "25sp"
                    #size_hint: None, None
                    #width: dp(34)
                    #pos_hint: {"center_x": 0.5, "center_y": 0}
                    on_release: app.switch_screen()


            ###### Recipe List #######
            MDBoxLayout:
                orientation: 'vertical'

                MDScrollView:
                    id:recipe_scroll
                    padding: 30
                    on_scroll_stop: app.on_scroll_stop(self.scroll_y)

                    RecipeList:
                        id: recipe_list

                MDFillRoundFlatButton:
                    id: show_more_btn
                    text: "Show more"
                    opacity: 0
                    pos_hint: {"center_x": .5}
                    on_release: app.show_more_recipes()


        ######## Recipe Info ########
        MDScreenManager:
            id: screens

            ScreenOne:
                id: screen_one
                #transition: NoTransition()

            ScreenTwo:
                id: screen_two
                #transition: NoTransition()

