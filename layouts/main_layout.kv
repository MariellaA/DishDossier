<RecipeItem>:
    #recipe_img: ImageLeftWidget
    size_hint_y: None
    height: dp(200)

    ImageLeftWidget:
        id: recipe_img

<Separator@Widget>
    id: separator
    size_hint_y: None
    height: 6
    thickness: 2
    canvas:
        Color:
            rgb: .24, .65, .94, 1
        Rectangle:
            #pos: 0, separator.center_y
            pos: self.pos[0], separator.center_y
            size: separator.width, self.thickness



<DishDossierController>
    orientation: 'horizontal'
    #spacing:10

    MDBoxLayout:
        size: root.width, root.height


        ######## SIDEBAR #########
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_x: None  # Fixed width
            width: 200
            #background_color: app.theme_cls.primary_color

            MDLabel:
                text: "Dish Dossier"
                text_color: (1, 0, 0, 1)
                padding: dp(10)
                size_hint_y: None
                #height: 200

            MDBoxLayout:
                orientation: "vertical"
                spacing: 10


                MDNavigationRail:
                    id: nav_rail
                    size_hint_x: None
                    width: 200

                    md_bg_color: app.theme_cls.primary_color  # Set background color
                    #specific_text_color: "#e7e4c0"

                    anchor: 'center'
                    ripple_color_item: [0.2, 0.2, 0.2, 0.1]
                    #on_action: root.on_navigation_item_select(args[0])

                    # All Recipes
                    MDNavigationRailItem:
                        text: 'All Recipes'
                        icon: 'rss'
                        font_name: "nasalization-rg.ttf"
                        on_release: root.on_recipe_list_select('all_recipes') #if self.state != 'Down'
                        #on_release: root.app,transition_to('reels')

                    # My Recipes
                    MDNavigationRailItem:
                        text: 'My Recipes'
                        icon: 'bookshelf'
                        font_name: "nasalization-rg.ttf"
                        on_release: root.on_recipe_list_select('my_recipes') #if self.state != 'Down'
                        #on_release: app.root.transition_to('my_recipes')

                    # Favourites
                    MDNavigationRailItem:
                        text: 'Favourites'
                        icon: 'notebook-heart-outline'
                        font_name: "nasalization-rg.ttf"
                        padding_top: dp(8)
                        on_release: root.on_recipe_list_select('favourites') #if self.state != 'Down'
                        #on_release: app.root.transition_to('favourites')


                    MDNavigationRailItem:
                        text: 'Meal Planner'
                        icon: 'calendar-multiselect'
                        font_name: "nasalization-rg.ttf"
                        on_press: root.on_recipe_list_select()  #root.transition_to('meal_planner')

                #MDSwitch:
                 #   id: switch_mode
                  #  pos_hint: {"center_x": .45}
                   # widget_style: "ios"
                    # on_release: root.switch_theme_style()


        ######### RECIPE LIST #########
        MDBoxLayout:
            #id: recipe_box
            orientation: 'vertical'
            size_hint: 0.3, 1


            spacing: 50
            padding: 30

            ###### SIDE BAR ######
            MDTextField:
                id: search_text
                hint_text: "Search"
                mode: "round"
                icon_right: "magnify"
                icon_right_color_focus: "orange"
                helper_text: "Search"
                on_text_validate: root.handle_search(self.text)
                #max_text_length: 15
                #size_hint: 1, 0.1
                #pos_hint: {"center_x": .5, "center_y": .5}

            MDBoxLayout:
                MDScrollView:
                    padding: 30

                    RecipeList:
                        id: recipe_list


        ######## Recipe Info ########
        MDGridLayout:
            cols: 2
            #padding: 20

            ScrollView:
                #md_bg_color: app.theme_cls.primary_color
                canvas.before:
                    Color:
                        rgba: app.theme_cls.primary_color
                    Rectangle:
                        pos: self.pos
                        size: self.size

                MDBoxLayout:
                    padding: 30
                    orientation: 'vertical'

                    MDLabel:
                        id: recipe_title
                        size_hint: 1, 0.30
                        font_size: "30dp"
                        text: 'Title'

                    MDLabel:
                        size_hint: 1, 0.1
                        id: recipe_servings
                        text: 'Servings'

                    MDGridLayout:
                        cols: 3
                        size_hint: 1, 0.1

                        MDLabel:
                            id: recipe_prep_time
                            text: 'Prep time'

                        MDLabel:
                            id: recipe_cook_time
                            text: 'Cook time'

                        MDLabel:
                            id: recipe_total_time
                            text: 'Total time'

                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint: 1, 1

                        MDLabel:
                            id: recipe_descr
                            text: 'Description'


                        MDLabel:
                            id: recipe_instr
                            text: "Instructions"
                            size_hint_y: None
                            height: self.texture_size[1]
                            adaptive_height: True
                            theme_text_color: "Secondary"
                            padding: dp(10)


            ######## Recipe Ingredients #########
            MDBoxLayout:
                orientation: 'vertical'

                padding: 30
                spacing: 70

                MDSmartTile:
                    id: recipe_full_image
                    radius: 24
                    box_radius: [0, 0, 24, 24]
                    box_color: 0, 0, 0, .2
                    anchor: 'top'
                    pos_hint: {"center_x": .5, "top": 1}
                    size_hint: None, None
                    width: "400dp"
                    height: "300dp"
                    #scale: False
                    #size: "400dp", "360dp"

                    MDIconButton:
                        id: favs_button
                        icon: "heart-outline"
                        theme_icon_color: "Custom"
                        icon_color: 1, 0, 0, 1
                        pos_hint: {"center_y": .5}
                        on_release:
                            self.icon = "heart" if self.icon == "heart-outline" else "heart-outline"
                            root.ids.favs_label.text = "Added To Favourites" if self.icon == "heart" else "Add To Favourites"
                            root.add_to_favourites() if self.icon == "heart" else root.remove_from_favourites()

                    MDLabel:
                        id: favs_label
                        text: "Add to Favourites"
                        bold: True
                        color: 1, 1, 1, 1

                ScrollView:

                    MDLabel:
                        id: recipe_ingr
                        text: "Ingredients"
                        size_hint: 0.5, .9
                        #size_hint_y: None
                        #height: self.texture_size[1]
                        #adaptive_height: True
                        theme_text_color: "Secondary"
                        padding: dp(10)
                        bold: True
                        color: 1, 1, 1, 1
