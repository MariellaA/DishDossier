<RecipeItem>:
    #recipe_img: ImageLeftWidget
    size_hint_y: None
    height: dp(300)

    ImageLeftWidget:
        id: recipe_img

<Separator@Widget>
    id: separator
    size_hint_y: None
    height: 6
    thickness: 2
    canvas:
        Color:
            rgb: .24, .65, .94, 1
        Rectangle:
            #pos: 0, separator.center_y
            pos: self.pos[0], separator.center_y
            size: separator.width, self.thickness

<ItemConfirm>
    on_release: root.set_icon(check)

    CheckboxLeftWidget:
        id: check
        #on_active: app.check_button_state(self, self.active)
        #group: "check"


<ScreenOne>:
    name: 'screen_one'
    #recipe_title: 'recipe_title'
    #recipe_servings: 'recipe_servings'
    #recipe_prep_time: 'recipe_prep_time'

    MDGridLayout:
        cols: 2
        #padding: 20

        MDScrollView:
            #md_bg_color: app.theme_cls.primary_color
            canvas.before:
                Color:
                    rgba: app.theme_cls.primary_color
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDBoxLayout:
                padding: 30
                orientation: 'vertical'

                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint: None, None
                    pos_hint: {"center_x": 0.85, "center_y": 0.5}
                    height: dp(20)
                    #padding: (0, 0, 0, 0)

                    MDIconButton:
                        id: edit_btn

                        icon: "pencil"
                        theme_icon_color: "Custom"
                        icon_color: 0, 1, 0, 1
                        pos_hint: {"right": 0.98, "center_y": 0.5}
                        opacity: 1
                        on_release: app.edit_recipe()
                        disabled: False

                    MDIconButton:
                        id: delete_btn

                        icon: "delete"
                        theme_icon_color: "Custom"
                        icon_color: 1, 0, 0, 1
                        size_hint: None, None
                        pos_hint: {"center_x": 0.98, "center_y": 0.5}
                        opacity: 1
                        on_release: app.delete_recipe()
                        disabled: True

                MDLabel:
                    id: recipe_title

                    size_hint_y: 0.3
                    font_size: "30dp"
                    text: 'Title'
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                MDLabel:
                    size_hint: 1, 0.1
                    id: recipe_servings
                    text: 'Servings'

                MDGridLayout:
                    cols: 3
                    size_hint: 1, 0.1

                    MDLabel:
                        id: recipe_prep_time
                        text: 'Prep time'

                    MDLabel:
                        id: recipe_cook_time
                        text: 'Cook time'

                    MDLabel:
                        id: recipe_total_time
                        text: 'Total time'

                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, 1

                    MDLabel:
                        id: recipe_instr
                        text: "Instructions"
                        size_hint_y: None
                        height: self.texture_size[1]
                        adaptive_height: True
                        theme_text_color: "Secondary"
                        padding: dp(10)


        ######## Recipe Ingredients #########
        MDBoxLayout:
            orientation: 'vertical'

            padding: 30
            spacing: 70

            MDSmartTile:
                id: recipe_full_image
                radius: 24
                box_radius: [0, 0, 24, 24]
                box_color: 0, 0, 0, .2
                anchor: 'top'
                pos_hint: {"center_x": .5, "top": 1}
                size_hint: None, None
                width: "400dp"
                height: "300dp"
                #scale: False
                #size: "400dp", "360dp"

                MDIconButton:
                    id: favs_button
                    icon: "heart-outline"
                    theme_icon_color: "Custom"
                    icon_color: 1, 0, 0, 1
                    pos_hint: {"center_y": .5}
                    on_release:
                        self.icon = "heart" if self.icon == "heart-outline" else "heart-outline"
                        root.ids.favs_label.text = "Remove from Favourites" if self.icon == "heart" else "Add To Favourites"
                        app.add_or_remove_from_favourites() # if self.icon == "heart" else app.remove_from_favourites()

                MDLabel:
                    id: favs_label
                    text: "Add to Favourites"
                    bold: True
                    color: 1, 1, 1, 1

            ScrollView:

                MDLabel:
                    id: recipe_ingr
                    text: "Ingredients"
                    size_hint: 0.5, .9
                    #size_hint_y: None
                    #height: self.texture_size[1]
                    #adaptive_height: True
                    theme_text_color: "Secondary"
                    padding: dp(10)
                    bold: True
                    color: 1, 1, 1, 1



<ScreenTwo>:
    name: 'screen_two'

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(70)
            #minimum_width: dp(400)
            #size_hint_y: 0.1
            #size_hint: 1, 0,2

            padding: 30
            spacing: 30

            MDFlatButton:
                id: add_cancel_btn

                text: "Cancel"
                #size_hint_y: 1
                #pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                md_bg_color: (1, 0, 0, 1)
                on_release: root.cancel_add_edit_recipe()

            Widget:  # Empty widget to create spacing

            MDRaisedButton:
                id: add_done_btn
                text: "Done"
                md_bg_color: (0, 1, 0, 1)
                size_hint: None, None
                #size_hint_y: 1
                #pos_hint: {'center_y': 0.5, 'right': 1}
                #on_release: app.done_creating_editing_recipe()

        MDGridLayout:
            cols: 2

            #MDScrollView:
                #canvas.before:
                 #   Color:
                  #      rgba: app.theme_cls.primary_color
                   # Rectangle:
                    #    pos: self.pos
                     #   size: self.size

            MDBoxLayout:
                orientation: 'vertical'

                padding: 30
                spacing: 30

                MDGridLayout:
                    cols: 2
                    size_hint: 1, 0.1

                    MDLabel:
                        id: s2_recipe_title

                        text: 'Title'
                        #size_hint: 1, 0.30
                        size_hint_x: 0.5
                        font_size: dp(30)

                    MDTextField:
                        id: s2_recipe_title_input
                        required: True
                        line_color_focus: "blue"

                MDGridLayout:
                    cols: 2
                    size_hint: 1, 0.1

                    MDLabel:
                        text: 'Servings'
                        #size_hint: 1, 0.1
                        size_hint_x: 0.5

                    MDTextField:
                        id: s2_recipe_servings

                        #max_text_length: 2
                        line_color_focus: "blue"


                MDGridLayout:
                    cols: 2
                    size_hint: 1, 0.1

                    MDLabel:
                        text: 'Prep time'
                        size_hint_x: 0.5

                    MDTextField:
                        id: s2_recipe_prep_time
                        max_text_length: 4
                        helper_text: "Time in minutes"
                        helper_text_mode: "on_focus"
                        line_color_focus: "blue"

                MDGridLayout:
                    cols: 2
                    size_hint: 1, 0.1

                    MDLabel:
                        text: 'Cook time'
                        size_hint_x: 0.5

                    MDTextField:
                        id: s2_recipe_cook_time
                        max_text_length: 4
                        helper_text: "Time in minutes"
                        helper_text_mode: "on_focus"
                        line_color_focus: "blue"

                MDGridLayout:
                    cols: 2
                    size_hint: 1, 0.1

                    MDLabel:
                        text: 'Total time'
                        size_hint_x: 0.5

                    MDTextField:
                        id: s2_recipe_total_time
                        max_text_length: 4
                        helper_text_mode: "on_focus"
                        helper_text: "Time in minutes"
                        line_color_focus: "blue"

                MDBoxLayout:
                    orientation: 'vertical'

                    size_hint: 1, 0.9
                    #height: dp(120)  # Adjust this to set the minimum height of the ScrollView
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    #canvas.before:
                     #   Color:
                      #      rgba: app.theme_cls.primary_color
                       # Rectangle:
                        #    pos: self.pos
                         #   size: self.size

                    MDLabel:
                        size_hint_y: 0.3
                        #width: dp(30)
                        text: "Instructions"

                    MDScrollView:
                        MDTextField:
                            id: s2_recipe_instr

                            required: True
                            multiline: True
                            line_color_normal: "blue"


            MDBoxLayout:
                orientation: 'vertical'
                pos_hint: {"center_x": 0.5, "center_y": 0.8}

                padding: 30
                spacing: 30

                Image:
                    id: s2_recipe_image_display
                    #source: app.image_source
                    size_hint: 1, None
                    pos_hint: {"center_x": 0.5, "top": 0.9}
                    width: "400dp"
                    height: "217dp"
                    #allow_stretch: True

                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(40)

                    MDIconButton:
                        icon: "camera"
                        #md_bg_color: (0, 0, 1, 1)
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color
                        on_release: root.show_image_chooser()
                        #on_release: app.select_image()

                    MDIconButton:
                        icon: "delete"
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color
                        #on_release: root.remove_image()


                MDBoxLayout:
                    orientation: "vertical"

                    size_hint: 1, 0.9
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    padding: 30
                    spacing: 30

                    MDLabel:
                        text: "Ingredients"
                        size_hint_y: 0.3

                    MDScrollView:
                        MDTextField:
                            id: s2_recipe_ingr

                            multiline: True
                            required: True
                            #on_text_validate: app.handle_ingredients_input()

        MDFlatButton:
            text: "Next Screen"
            md_bg_color: (1, 0, 0, 1)
            #on_release: app.root.current = 'screen_two'


DishDossierController:
    orientation: 'horizontal'
    #spacing:10

    MDBoxLayout:
        size: root.width, root.height

        ######## SIDEBAR #########
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_x: None  # Fixed width
            width: 200
            #background_color: app.theme_cls.primary_color

            MDLabel:
                text: "Dish Dossier"
                text_color: (1, 0, 0, 1)
                padding: dp(10)
                size_hint_y: None
                #height: 200

            MDBoxLayout:
                orientation: "vertical"
                spacing: 10


                MDNavigationRail:
                    id: nav_rail
                    size_hint_x: None
                    width: 200

                    md_bg_color: app.theme_cls.primary_color  # Set background color
                    #specific_text_color: "#e7e4c0"

                    anchor: 'center'
                    ripple_color_item: [0.2, 0.2, 0.2, 0.1]
                    #on_action: app.on_navigation_item_select(args[0])

                    # All Recipes
                    MDNavigationRailItem:
                        text: 'All Recipes'
                        icon: 'rss'
                        font_name: "nasalization-rg.ttf"
                        on_release: app.on_recipe_list_select('all_recipes') #if self.state != 'Down'
                        #on_release: app.transition_to('reels')

                    # My Recipes
                    MDNavigationRailItem:
                        text: 'My Recipes'
                        icon: 'bookshelf'
                        font_name: "nasalization-rg.ttf"
                        on_release: app.on_recipe_list_select('my_recipes') #if self.state != 'Down'
                        #on_release: app.root.transition_to('my_recipes')

                    # Favourites
                    MDNavigationRailItem:
                        text: 'Favourites'
                        icon: 'notebook-heart-outline'
                        font_name: "nasalization-rg.ttf"
                        padding_top: dp(8)
                        on_release: app.on_recipe_list_select('favourites') #if self.state != 'Down'
                        #on_release: app.root.transition_to('favourites')


                    MDNavigationRailItem:
                        text: 'Meal Planner'
                        icon: 'calendar-multiselect'
                        font_name: "nasalization-rg.ttf"
                        on_press: app.on_recipe_list_select()  #app.transition_to('meal_planner')

                #MDSwitch:
                 #   id: switch_mode
                  #  pos_hint: {"center_x": .45}
                   # widget_style: "ios"
                    # on_release: app.switch_theme_style()


        ######### RECIPE LIST #########
        MDBoxLayout:
            #id: recipe_box
            orientation: 'vertical'
            size_hint: 0.4, 1

            spacing: 30
            padding: 30

            ###### SEARCH BAR ######
            MDGridLayout:
                cols: 3
                size_hint: 1, 0.1
                #valign: "middle"
                spacing: 50

                MDRaisedButton:
                    id: search_by_btn
                    text: "Search by"
                    #pos_hint: {'center_x': 0.5}
                    #on_release: app.show_filter_menu()
                    on_release: app.show_search_by_options()


                MDTextField:
                    id: search_text
                    hint_text: "Search"
                    mode: "round"
                    icon_right: "magnify"
                    icon_right_color_focus: "orange"
                    #helper_text: "Search"
                    on_text_validate: app.search_for_recipe(self.text)

                    #max_text_length: 15
                    #size_hint: 1, 0.1
                    #size_hint_y: None
                    #padding: 0, 0, 0, 0
                    #pos_hint_y: {"center_y": .1}

                MDIconButton:
                    icon: "hamburger-plus"
                    #anchor: "center"
                    #icon_size: "25sp"
                    #size_hint: None, None
                    #width: dp(34)
                    #pos_hint: {"center_x": 0.5, "center_y": 0}
                    on_release: app.switch_screen()


            ###### Recipe List #######
            MDBoxLayout:
                orientation: 'vertical'

                MDScrollView:
                    id:recipe_scroll
                    padding: 30
                    on_scroll_stop: app.on_scroll_stop(self.scroll_y)

                    RecipeList:
                        id: recipe_list

                MDFillRoundFlatButton:
                    id: show_more_btn
                    text: "Show more"
                    opacity: 0
                    pos_hint: {"center_x": .5}
                    on_release: app.show_more_recipes()


        ######## Recipe Info ########
        MDScreenManager:
            id: screens

            ScreenOne:
                id: screen_one
                #transition: NoTransition()

            ScreenTwo:
                id: screen_two
                #transition: NoTransition()

